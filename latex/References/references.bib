issn = {10889051},
journal = {Genome Research},
pages = {1426--1437},
pmid = {21803857},
title = {{Histone H3 trimethylation at lysine 36 is associated with constitutive and facultative heterochromatin}},
volume = {21},
year = {2011}
}
