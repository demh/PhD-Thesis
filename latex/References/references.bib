keywords = {B-lymphopoiesis,aging,hematopoietic stem cells,myelopoiesis,xenotransplantation},
number = {3},
pages = {542--546},
publisher = {John Wiley {\&} Sons, Ltd (10.1111)},
title = {{Age-related changes in human hematopoietic stem/progenitor cells}},
url = {https://doi.org/10.1111/j.1474-9726.2011.00675.x},
