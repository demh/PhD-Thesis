issn = {1872-4973},
journal = {Forensic Science International: Genetics},
keywords = {Age prediction,Biomarker,CpG islands,DNA methylation,Forensic science},
pages = {161--167},
title = {{Examination of DNA methylation status of the ELOVL2 marker may be useful for human age prediction in forensic science}},
