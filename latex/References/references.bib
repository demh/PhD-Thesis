year = {2013}
}
@article{Cole2017,
abstract = {Age-associated epigenetic changes are implicated in aging. Notably, age-associated DNA methylation changes comprise a so-called aging “clock”, a robust biomarker of aging. However, while genetic, dietary and drug interventions can extend lifespan, their impact on the epigenome is uncharacterised. To fill this knowledge gap, we defined age-associated DNA methylation changes at the whole-genome, single-nucleotide level in mouse liver and tested the impact of longevity-promoting interventions, specifically the Ames dwarf Prop1df/dfmutation, calorie restriction and rapamycin.},
