pages = {424--429},
title = {{Bisulfite-free direct detection of 5-methylcytosine and 5-hydroxymethylcytosine at base resolution}},
url = {https://doi.org/10.1038/s41587-019-0041-2},
volume = {37},
year = {2019}
}
